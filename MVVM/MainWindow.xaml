<Window x:Class="_4_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="250,10,0,0" Text="{Binding Barcode}" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" Height="37" FontSize="20"/>
        <Label x:Name="label" Content="Введите штрихкод" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="37" Width="235" FontSize="20"/>
        <Button x:Name="button" Content="Рассчитать" HorizontalAlignment="Left" Margin="640,10,0,0" VerticalAlignment="Top" Command="{Binding CalcCommand}" Height="37" Width="150" FontSize="20"/>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding Data}" Margin="0,100,0,0"/>
        <Label x:Name="label1" Content="Обратите внимание что штирход вводится одним числом, без посторонних знаков" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Width="780" Height="43" FontSize="20"/>
    </Grid>
</Window> 
    